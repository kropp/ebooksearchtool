{% if query %}
    <link href="search.atom?page={{curr}};items_per_page={{items_per_page}};query={{ query }}" rel="self"/>
    <link rel="next" href="search.atom?page={{next}};items_per_page={{items_per_page}};query={{ query }}"/>
{% else %}

    {% if title.author and title.tit %}
        <link href="search.atom?page={{curr}};items_per_page={{items_per_page}};author={{ title.author }};title={{ title.tit }}" rel="self"/>
        <link rel="next" href="search.atom?page={{next}};items_per_page={{items_per_page}};author={{ title.author }};title={{ title.tit }}"/>
    {% else %}
        {% if not title.author and not title.tit %}
            <link href="all.atom?page={{curr}};items_per_page={{items_per_page}};" rel="self"/>     
            <link rel="next" href="all.atom?page={{next}};items_per_page={{items_per_page}}"/>
        {% else %}    
            {% if title.tit %}
                <link href="search.atom?page={{curr}};items_per_page={{items_per_page}};title={{ title.tit }}" rel="self"/>
                <link rel="next" href="search.atom?page={{next}};items_per_page={{items_per_page}};title={{ title.tit }}"/>
            {% endif %}
            {% if title.author %}
                <link href="search.atom?page={{curr}};items_per_page={{items_per_page}};author={{ title.author }}" rel="self"/>
                <link rel="next" href="search.atom?page={{next}};items_per_page={{items_per_page}};author={{ title.author }}"/>
            {% endif %}
        {% endif %}
    {% endif %}
{% endif %}
