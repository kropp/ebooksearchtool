{% include 'book/opds/header.xml' %}
    <link href="search.atom?" rel="alternate"></link>

    {% if next %}    
        {% include 'book/opds/self_next_links.xml' %}
    {% endif %}

    
    <title>Search results for: 
    {% if query %}
        Query "{{ query }}";
    {% endif %}
    {% if title.tit %}
        Title "{{ title.tit }}";
    {% endif %} 
    {% if title.author %}
        Author "{{ title.author }}";
    {% endif %}
    {% if title.language.short %}
        Language "{{ title.language.short }}";
    {% endif %}
    {% if title.tag %}
        Tag "{{ title.tag }}";
    {% endif %}
    </title>
    
    <opensearch:totalResults> {{ total }} </opensearch:totalResults>
    <opensearch:itemsPerPage> {{ items_per_page }} </opensearch:itemsPerPage>

    {% for book in books %}
    <entry>
        {% include 'book/opds/book_description.xml' %}
    </entry>
    {% endfor %}
</feed>
