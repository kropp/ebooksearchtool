<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">

<head profile="http://www.w3.org/1999/xhtml/vocab">
  <title> {{ book.title }} </title>
  
  <meta http-equiv="content-type" content="application/xhtml+xml; charset=utf-8" />
 
  <!-- Links --> 
  <link rel="search" type="application/opensearchdescription+xml" title="Opensearch description" href="/opensearch.xml" />

  <!-- CSS 
  <link rel="stylesheet" href="/stylesheets/screen.css" type="text/css" media="screen, projection" /> 
  <link rel="stylesheet" href="/stylesheets/print.css" type="text/css" media="print" /> 
  <link href="/stylesheets/normal.css?1255441690" media="screen" rel="stylesheet" type="text/css" />
  -->
  
<style type="text/css">
    
    img.cover {margin-top: 3px; max-height: 110px;}

</style>  
  
</head>

<body>

<div class="container">
  <div>

    <h1> {{ book.title }} </h1>
    <h2>
      by 
      
      {% for author in book.author_set.all %}
        <em><a href="../author/id{{ author.id }}" class="gray">{{ author.name }}</a></em>
      {% endfor %}
    </h2>
  </div>
</div>

  <div>
    <div>
      <div>

      {% if not book.book_file.all.0.img_link %}
        <a href="id{{ book.id }}"><img alt="{{ book.title }}" class="cover" align="left" border="0" hspace="10" src="http://abyss.hubbe.net/gfx/covers/no_cover.gif" title="{{ book.title }}" /></a>
      {% else %}
        <a href="id{{ book.id }}"><img alt="{{ book.title }}" class="cover" align="left" border="0" hspace="10"  src="{{book.book_file.all.0.img_link}}" title="{{ book.title }}" /></a> 
      {% endif %} 
      </div>
      <div class="span-11 invisible-colborder">

        <div class="small">
        {% if book.lang %}
          <h4>Language:</strong> <a href="../search?lang={{ book.lang }}">{{ book.lang }}</a> </p></h4>
        {% endif %}
        {% if book.tag.all %}
        <div class="tags">
            <h4 class="charcoal">Tags:
            {% for tag in book.tag.all %}
                <em><a href="../search?tag={{ tag }}" class="gray">{{ tag }}</a> </em>
            {% endfor %}
        </h4>
        {% endif %}

        </div>
        <p class="bottom">
          
        {% if book.annotation.all %}
            <div id="partial_desc" class="justify">
        <h3>Description</h3>
                {% for annotation in book.annotation.all %}
                    {{ annotation }} 
                {% endfor %}          
            </div>  
        {% endif %}        
        </p>
        <div class="span-4 last">
            <h3>Download&nbsp;:</h3>
                {% for book_file in book.book_file.all %}
                    <h3><a href="{{ book_file.link }}" class="{{ book_file.type }}">
                    {% if book_file.type %}
                        {{ book_file.type }}
                    {% else%}
                        unrecognized type
                    {% endif %}
                        </a></h3>
                {% endfor %}
        </div>

      </div>

    </div>
  </div>

</body>
</html>

