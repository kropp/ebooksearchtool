<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">

<head profile="http://www.w3.org/1999/xhtml/vocab">
  <title> {{ book.title }} </title>
  
  <meta http-equiv="content-type" content="application/xhtml+xml; charset=utf-8" />
  <meta http-equiv="X-UA-Compatible" content="chrome=1" />
  
  <!-- Links --> 
  <link rel="search" type="application/opensearchdescription+xml" title="Opensearch description" href="/opensearch.xml" />

  <!-- CSS 
  <link rel="stylesheet" href="/stylesheets/screen.css" type="text/css" media="screen, projection" /> 
  <link rel="stylesheet" href="/stylesheets/print.css" type="text/css" media="print" /> 
  <link href="/stylesheets/normal.css?1255441690" media="screen" rel="stylesheet" type="text/css" />
  -->
  
</head>

<body>

<div class="container">
  <div class="span-17">

    <h1 class="bottom fb-blue"> {{ book.title }} </h1>
    <h2 class="charcoal">
      by 
      
      {% for author in book.author_set.all %}
        <em><a href="../author/id{{ author.id }}" class="gray">{{ author.name }}</a></em>
      {% endfor %}
    </h2>
  </div>
</div>

  <div class="blue-background full-width">
    <div class="container append-bottom box">
      <div class="span-6">

          {% for book_file in book.book_file.all %}
              <a href="/book/id{{ book.id }}"><img alt="{{ book.title }}" class="cover" src="{{book_file.img_link}}" title="{{ book.title }}" /></a> 
          {% endfor %}
      </div>
      <div class="span-11 invisible-colborder">

        <h3>Description</h3>
        <div class="small">
          <p><strong>Language:</strong> <a href="../search?lang={{ book.lang }}">{{ book.lang }}</a> </p>
          <p>
            <strong>Tags:</strong>
                {% for tag in book.tag.all %}
                    <a href="../search?tag={{ tag}}"> {{ tag }} </a>
                {% endfor %}
          </p>

        </div>
        <p class="bottom">
          
            <div id="partial_desc" class="justify">
                {% for annotation in book.annotation.all %}
                    {{ annotation }} 
                {% endfor %}          
            </div>          
        </p>
        <div class="span-4 last">
            <h3>Download&nbsp;:</h3>
                {% for book_file in book.book_file.all %}
                    <h3><a href="{{ book_file.link }}" class="{{ book_file.type }}">
                    {% if book_file.type %}
                        {{ book_file.type }}
                    {% else%}
                        unrecognized type
                    {% endif %}
                        </a></h3>
                {% endfor %}
        </div>

      </div>

    </div>
  </div>

</body>
</html>

