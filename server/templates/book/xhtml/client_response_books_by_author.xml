<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">

<head profile="http://www.w3.org/1999/xhtml/vocab">
    <title> Authors </title>
    
    <!-- Links --> 
    <link rel="search" type="application/opensearchdescription+xml" title="Opensearch description" href="opensearch" />
</head>

<body>
<div id="header">
  
    <div class="container">
        <div class="span-19">
            <h1 class="fb-blue bottom">Authors: </h1>
        </div>
    </div>
    {% ifequal num 1 %} 
        {% for letter in alphabet %}
            <h3 class="fb-blue small-bottom-margin"><a href="authors?letter={{letter}}">{{ letter }}</a></h3>
        {% endfor %}
    {% endifequal %} 
    
    {% ifequal num 2 %} 
        {% for let in alphabet %}
            <h3 class="fb-blue small-bottom-margin"><a href="authors?letters={{letter}}{{let}}">{{ letter }}{{ let }}</a></h3>
        {% endfor %}
    {% endifequal %} 

</div>

</body>
</html>
