{% include 'book/xhtml/header.xml' %}

    <title> Authors | eBookSearch</title>
</head>

<body>
<a href="/" rel="main_page">Back to catalog</a>
    <center><b><font color="#003ba6" size="6">eBookSearch</font></b></center>

<div id="header">
    <h1>Authors: </h1>
</div>

{% if string %}
    {% for letter in string %}
        {% ifequal num 1 %}     
            <h3><a href="authors?letter={{letter}}">{{ letter }}</a></h3>
        {% else %}
            <h3><a href="authors?letters={{letter}}">{{ letter }}</a></h3>        
        {% endifequal %} 
    {% endfor %}

{% else %}
    {% for author in authors %}
        <h3><a href="../author/id{{author.id}}">{{ author.name }}</a></h3>
    {% endfor %}
{% endif %} 
{% include 'book/xhtml/footer.xml' %}
