{% load i18n %}
{% include 'book/xhtml/header.xml' %}

    <title> Authors | eBookSearch</title>
</head>

<body>
<div id="lang" align="right">
    <form action="/i18n/setlang/" method="post">
        <font size="2">{% trans "Change language:" %}</font>
        <select name="language">
        {% for lang in LANGUAGES %}
        {% ifequal  lang.0 request.LANGUAGE_CODE%}
            <option value="{{ lang.0 }}" selected>{{ lang.1 }}</option>
        {% else %}
            <option value="{{ lang.0 }}" >{{ lang.1 }}</option>
        {%endifequal%}
        
        {% endfor %}
        </select>
        <input type="submit" value="Go" />
    </form>
</div>

<center><a href="/"><img alt="eBookSearch" border="0" hspace="10"  src="{{MEDIA_URL}}/pic/title.png" title="eBookSearch" /></a></center>

<div id="header">
    <h1>{% trans "Authors"%}: </h1>
</div>

{% if string %}
    {% for letter in string %}
        {% ifequal num 1 %}     
            <h3><a href="authors?letter={{letter}}">{{ letter }}</a></h3>
        {% else %}
            <h3><a href="authors?letters={{letter}}">{{ letter }}</a></h3>        
        {% endifequal %} 
    {% endfor %}

{% else %}
    {% for author in authors %}
        <h3><a href="../author/id{{author.id}}">{{ author.name }}</a></h3>
    {% endfor %}
{% endif %} 
{% include 'book/xhtml/footer.xml' %}
