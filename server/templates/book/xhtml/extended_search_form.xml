<div id="header">
  
    <h2>Extended search: </h2>

    <form name="extended_search" action="../search">
    
        <table>    
            <tr>
            <td>Title:</td>
            <td>  <input type="text" name="title" value="{{ title.tit }}"></td>
            <td><a href="/discover/search" rel="simple search">Simple search</a></td>
            </tr><tr>
            <td>Author:</td> 
            <td> <input type="text" name="author" value="{{ title.author }}"></td>
            </tr><tr>
            <td>Language:</td>  
            <td><select name="lang"  width="185" style="width: 185px">
                <option value="">--None--</option>
                <option value="en">English</option>
                <option value="ru">Russian</option>
                <option value="fr">French</option>
                <option disabled>-----------</option>                    

                {% for lang in langs %}
                    {% ifequal lang.1 title.lang %} 
                        <option selected value="{{lang.1}}">{{lang.0}}</option>                    
                    {% else %}
                    <option value="{{lang.1}}">{{lang.0}}</option>
                    {% endifequal %}
                {% endfor %}
                </select>
            </td>

            </tr><tr>
            <td>Tag:</td>
            <td><select name="tag"  width="185" style="width: 185px">
                <option value="">--None--</option>
                {% for tag in tags %}
                    {% ifequal tag.name title.tag %} 
                        <option selected value="{{tag.name}}">{{tag.name}}</option>
                    {% else %}
                        <option value="{{tag.name}}">{{tag.name}}</option>
                    {% endifequal %}
                {% endfor %}
                </select>
            </td>
             </tr><tr>
             <td></td><td align="right"><input type="submit" value="Search" ></td>
        </table>
    </form>

</div>
