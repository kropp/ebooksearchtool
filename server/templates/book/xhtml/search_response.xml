{% load i18n %}
{% load pagination_tags %}
{% include 'book/xhtml/header.xml' %}

    <title>Search results for: 
    {% if query %}
        Query "{{ query }}";
    {% endif %}
    {% if title.tit %}
        Title "{{ title.tit }}";
    {% endif %} 
    {% if title.author %}
        Author "{{ title.author }}";
    {% endif %}
    {% if title.language.short %}
        Language "{{ title.language.short }}";
    {% endif %}
    {% if title.tag %}
        Tag "{{ title.tag }}";
    {% endif %}
    | eBookSearch
    </title>

<style type="text/css">    
    img.cover {margin-top: 3px; max-height: 110px;}
</style> 
</head>


<body>
    {% if query %}
        {% include "book/xhtml/simple_search_form.xml" %}
    {% else %}
        {% include "book/xhtml/extended_search_form.xml" %}
    {% endif %}

{% if authors %}
<div id="authors">
    <h3>{%trans "Authors"%}:</h3>

    {% for author in authors %}
        <div>
                <a href="author/id{{ author.id }}" class="gray">{{ author.name }}</a></em>
        </div>
    {% endfor %}
    <h4>{%trans "More results"%}:  <a href="search?title=;author={{ query }};lang=;tag=" class="gray">{{ query }}</a></em></h4>
</div>
{% endif %}

{% if books %}
    <h2>{%trans "Found in books"%}:</h2>
    
    {% autopaginate books items_per_page %}
    {% for book in books %}

    <hr class="space" />

    <div>
        {% include 'book/xhtml/book_cover.xml' %}
        <h3><a href="book/id{{ book.id }}" class="title">{{ book.title }}</a></h3>
        
        {% if book.author.all %}
            <h4 class="authors">{%trans "by"%} 
              {% for author in book.author.all %}
                 <em><a href="author/id{{ author.id }}" class="author">{{ author.name }}</a></em>
              {% endfor %}
            </h4>   
        {% endif %} 


        {% include 'book/xhtml/book_description.xml' %}
        {% if not book.annotation.all.0 %}
             <br/>
        {% else %}
            <annotation> {{ book.annotation.all.0 }} </annotation>
        {% endif %}
        {% if not book.language.short %}
            <br/><br/>
        {% endif %}
    </div>

    {% endfor %}

<hr class="space" />
    {% paginate %}
{% endif %}
{% include 'book/xhtml/footer.xml' %}
